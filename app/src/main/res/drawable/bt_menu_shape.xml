<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <stroke
                android:color="#000"
                android:width="4dp"
                android:dashGap="10dp"
                android:dashWidth="50dp"/>

            <solid
                android:color="@color/orange"/>
            <corners android:radius="30dp"/>
            <padding android:right="5dp"
                android:top="4dp"
                android:bottom="4dp"
                android:left="5dp"/>

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <stroke
                android:color="#000"
                android:width="4dp"
                android:dashGap="70dp"
                android:dashWidth="50dp"/>

            <solid
                android:color="@color/orange"/>
            <corners android:radius="30dp"/>
            <padding android:right="5dp"
                android:top="4dp"
                android:bottom="4dp"
                android:left="5dp"/>

        </shape>
    </item>

</selector>